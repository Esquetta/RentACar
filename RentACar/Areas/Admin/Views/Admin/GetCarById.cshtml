@model CarForDetailDto
@{
    ViewData["Title"] = "GetCarById";
    Layout = "~/Areas/Admin/Views/Shared/_AdminHome.cshtml";
}


<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="canonical" href="https://getbootstrap.com/docs/4.1/components/carousel/">
</head>

<h3>@Model.Brand-@Model.Model</h3>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @if (@Model.Photos.Count > 0)
                {
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < @Model.Photos.Count; i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                    </ol>
                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.Photos[0].Url" alt="First slide">
                        </div>
                        @for (int i = 1; i < @Model.Photos.Count; i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.Photos[i].Url" alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                }
            </div>
        </div>
        <div class="col-md-4">
            <table class="table table-light table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Car Detail Info</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><label asp-for="Brand"></label></td>
                        <td><label>@Model.Brand</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Model"></label></td>
                        <td><label>@Model.Model</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Age"></label></td>
                        <td><label>@Model.Age</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Fuel_Type"></label></td>
                        <td><label>@Model.Fuel_Type</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Gearbox"></label></td>
                        <td><label>@Model.Gearbox</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Horse_Power"></label></td>
                        <td><label>@Model.Horse_Power</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Miles"></label></td>
                        <td><label>@Model.Miles</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Color"></label></td>
                        <td><label>@Model.Color</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Description"></label></td>
                        <td><label>@Model.Description</label></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Price"></label></td>
                        <td><label>@Model.Price</label></td>
                    </tr>

                </tbody>

            </table>

        </div>
    </div>
</div>


