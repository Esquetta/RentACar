@model Car
@{
    ViewData["Title"] = "AddCar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminHome.cshtml";
}
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>

<div class="container">
    <h1>Add new Car</h1>
    @if (TempData["Created"] != null)
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Success!</h4>
            <p>@TempData["Created"]</p>
        </div>
    }
    <form class="row g-3" asp-action="AddCar" asp-controller="Admin" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-6">
            <label asp-for="BrandId" class="form-label">Brand</label>
            <select asp-for="BrandId" asp-items="@ViewBag.BrandList" class="form-select">
                <option selected>Choose...</option>
            </select>
        </div>
        <div class="col-6">
            <label asp-for="Model" class="form-label">Model</label>
            <input asp-for="Model" class="form-control">
        </div>

        <div class="col-md-6">
            <label asp-for="CarColorId" class="form-label">Color</label>
            <select asp-for="CarColorId" asp-items="@ViewBag.ColorList" class="form-select">
                <option selected>Choose...</option>
            </select>
        </div>
        <div class="col-6">
            <label asp-for="ProductionDate"></label>
            <input class="form-control" asp-for="ProductionDate">
        </div>
        <div class="col-6">
            <label asp-for="Price" class="form-label"></label>
            <input class="form-control" asp-for="Price">
        </div>
        <div class="col-md-6">
            <label asp-for="HorsePower" class="form-label"></label>
            <input class="form-control" asp-for="HorsePower">
        </div>

        <div class="col-md-4">
            <label asp-for="FuelId" class="form-label"></label>
            <select asp-for="FuelId" asp-items="@ViewBag.FuelList" class="form-select">
                <option selected>Choose...</option>
            </select>
        </div>
        <div class="col-md-4">
            <label asp-for="GearBoxId" class="form-label">GearBox</label>
            <select asp-for="GearBoxId" asp-items="@ViewBag.GearBoxList" class="form-select">
                <option selected>Choose...</option>
            </select>
        </div>

        <div class="col-md-8">
            <label class="form-label" asp-for="Miles"></label>
            <input class="form-control" asp-for="Miles" />
        </div>
        <div class="col-md-10">
            <label class="form-label" asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

