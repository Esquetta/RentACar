@model Car
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminHome.cshtml";
}

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="canonical" href="https://getbootstrap.com/docs/4.1/components/carousel/">
</head>

<h3>@Model.Brand.BrandName-@Model.Model</h3>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @if (@Model.Photos.Count > 0)
                {
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < @Model.Photos.Count; i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                        }
                    </ol>
                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@Model.Photos[0].Url" alt="First slide">
                        </div>
                        @for (int i = 1; i < @Model.Photos.Count; i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.Photos[i].Url" alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                }
            </div>
        </div>
        <div class="col-md-4">
            <table class="table table-light table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Car Detail Info</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <form asp-action="Update" asp-controller="Admin" method="post">
                        <input type="hidden" asp-for="Id" />
                    <tr>
                        <td><label asp-for="Brand"></label></td>
                        <td>
                            <select asp-for="BrandId" asp-items="@ViewBag.BrandList" class="form-select">
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Model"></label></td>
                        <td><input asp-for="@Model.Model"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="ProductionDate"></label></td>
                        <td><input asp-for="@Model.ProductionDate"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Fuel"></label></td>
                        <td>
                            <label>
                                <select asp-for="FuelId" asp-items="@ViewBag.fuelList" class="form-select">
                                </select>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="GearBox"></label></td>
                        <td>
                            <label>
                                <select asp-for="GearBoxId" asp-items="@ViewBag.gearBoxList" class="form-select">
                                </select>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="HorsePower"></label></td>
                        <td><input asp-for="@Model.HorsePower"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Miles"></label></td>
                        <td><input asp-for="@Model.Miles"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="CarColor"></label></td>
                        <td>
                            <label>
                                <select asp-for="CarColorId" asp-items="@ViewBag.colorList" class="form-select">
                                </select>
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td><label asp-for="Description"></label></td>
                        <td><input asp-for="@Model.Description"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="Price"></label></td>
                        <td><input asp-for="@Model.Price"></td>
                    </tr>
                    <tr>
                        <td><label asp-for="For_Rent"></label></td>
                        <td><input asp-for="@Model.For_Rent"></td>
                    </tr>

                    <tr><td><input type="submit" class="btn btn-primary" value="Update" /></td></tr>
                    </form>

                </tbody>

            </table>

        </div>
    </div>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</div>

