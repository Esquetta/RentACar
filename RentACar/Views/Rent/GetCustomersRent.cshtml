@model List<RentedCarsWithCustomerListDto>
@{
    ViewData["Title"] = "GetCustomersRent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Model[0].CustomerName's Orders</h3>

<div class="container">
    <div class="album bg-light">
        <div class="row">

            <div class="col-md-3">





            </div>

            <div class="col-md-9">
                <div class="row ">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="@item.CarForList.PhotoUrl" alt="Card image cap">
                                <div class="card-body">
                                    <h6>@item.CarForList.Brand-@item.CarForList.Model</h6>
                                    <h6>@item.CustomerName-@item.CustomerSurName</h6>
                                    <h6>@item.GivenDate.ToShortDateString()</h6> <h6>@item.ReturnDate.ToShortDateString()</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@item.CarForList.Price$</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<RentPager rentpager-Action="GetCustomersRent" rentpager-controller="Rent" rentpager-CurrentPage="@Model[0].CurrentPage" rentpager-PageCount="@Model[0].PageCount"></RentPager>

